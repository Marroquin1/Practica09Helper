@{
}
<h1>Mantenimiento de equipos<h1/>
    <br>

    <form asp-action="CrearEquipos">

        <div class= "form-group row mb-4">
            <div class= "col-sm-2">
            <label>Nombre</label>
            @Html.TextBox("txtUserName", "Valor de prueba", new { @class = "form-control" })
        </div>
            <div class="col-sm-4">
            @Html.TextBox("Nombre","",new{@class="form-control"})
        </div>
            <div class="col-sm-2">
            @Html.Label("lblDescripcion","Descripcion")
        </div>
            <div class="col-sm-4">
                @Html.TextArea("descripcion", "",
                         new { @class = "form-control",@placeHolder ="Ingrese la descripcion"})
            </div>
            <div class="col-sm-2">
                @Html.DropDownList("marca_id", ViewData["listadoDeMarcas"] as SelectList, "Seleccione una marca",
                         new { @class = "form-control"})
            </div>
            <div class="col-sm-4">
            <input type="submit" class="btn btn-primary" value="Guardar"></input>
            </div>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Equipo</th>
                    <th>Descripcion</th>
                    <th>Marca</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var equipo in (IEnumerable<dynamic>)ViewData["listadoEquipo"])
                {
                
                    <tr>
                        <td>@equipo.nombre</td>
                        <td>@equipo.descripcion</td>
                        <td>@equipo.marca_nombre</td>
                    </tr>
                    
                }
            </tbody>
        </table>

    </form>

    </br>
